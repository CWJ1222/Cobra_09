<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Signup</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        background-color: #f8f9fa;
      }
      .signup-container {
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 300px;
        text-align: center;
      }
      h1 {
        margin-bottom: 20px;
        color: #333;
      }
      input {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #ccc;
        border-radius: 4px;
      }
      button {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }
      button:hover {
        background-color: #0056b3;
      }
    </style>
    <script>
      // 이메일 입력 시 nickname 자동 설정
      function setNickname() {
        const email = document.getElementById('email').value;
        const nicknameInput = document.getElementById('nickname');
        if (email.includes('@')) {
          const nickname = email.split('@')[0]; // @ 앞부분 가져오기
          nicknameInput.value = nickname;
        }
      }
    </script>
  </head>
  <body>
    <div class="signup-container">
      <h1>회원가입</h1>
      <form action="/member/signup" method="POST">
        <!-- 이메일 입력 -->
        email:
        <input
          type="email"
          id="email"
          name="email"
          placeholder="이메일"
          oninput="setNickname()"
          required
        />
        <!-- 비밀번호 입력 -->
        password:
        <input
          type="password"
          name="password"
          placeholder="비밀번호"
          required
        />
        <!-- 닉네임 입력 (자동으로 채워짐) -->
        nickname:
        <input
          type="text"
          id="nickname"
          name="nickname"
          placeholder="닉네임"
          required
        />
        <!-- 가입하기 버튼 -->
        <button type="submit">가입하기</button>
      </form>
    </div>
  </body>
</html>
